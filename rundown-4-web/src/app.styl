    --color-acc-fg-3: #90c0f0
    --color-acc-fg-4: #98c8f8
    --color-acc-fg-5: #a0d0ff

    --color-sig-bg-1: #904800
    --color-sig-bg-2: #a05810
    --color-sig-bg-3: #b06820
