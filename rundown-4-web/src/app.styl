    --font-family:    "TypoPRO Source Sans Pro", sans-serif

html,
body
    margin: 0
    padding: 0
    width: 100vw
    height: 100vh
    overflow: hidden
    color: var(--color-std-fg-3)
    background-color: var(--color-std-bg-0)
    font-family: var(--font-family)
    font-weight: normal
    user-select: none
    font-size: 11pt

