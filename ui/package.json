{
    "name":                  "Rundown",
    "version":               "0.0.0",
    "description":           "Generate Rundown Scripts for Teleprompting",
    "keywords":              [],
    "author": {
        "name":              "Ralf S. Engelschall",
        "url":               "http://engelschall.com/"
    },
    "devDependencies": {
        "electron":          "29.0.1",
        "electron-builder":  "24.12.0",
        "electron-notarize": "1.2.2",
        "nodemon":           "3.1.0",
        "shelljs":           "0.8.5",
        "cross-zip":         "4.0.1",
        "glob":              "10.3.10"
    },
    "dependencies": {
        "execa":             "5.1.1",
        "jquery":            "3.7.1",
        "syspath":           "1.0.6",
        "jsonfile":          "6.1.0",
        "typopro-web":       "4.2.6"
    },
    "upd":                   [ "!execa" ],
    "main":                  "./app-main.js",
    "build": {
        "appId":             "com.engelschall.apps.rundown",
        "app-category-type": "com.engelschall.apps"
    },
    "scripts": {
        "start":             "electron app-main.js",
        "start-dev":         "DEBUG=1 nodemon --exec \"npm start\" --watch . --ext html,css,js",
        "package":           "node npm-package.js"
    },
    "build": {
        "appId":                         "com.engelschall.apps.rundown",
        "productName":                   "Rundown",
        "asar":                          true,
        "asarUnpack":                    [ "rundown-mac-x64",
                                           "rundown-win-x64.exe",
                                           "rundown-lnx-x64" ],
        "removePackageScripts":          true,
        "compression":                   "normal",
        "directories": {
            "output":                    "dist"
        },
        "mac": {
            "target":                    [ { "target": "dir" } ],
            "category":                  "com.engelschall.apps",
            "identity":                  null,
            "icon":                      "app-ui-icon.png",
            "files": [                   "!node_modules/electron-builder/**",
                                         "!node_modules/electron-notarize/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm-install-fetch/**" ]
        },
        "win": {
            "target":                    [ { "target": "portable" } ],
            "icon":                      "app-ui-icon.png",
            "files": [                   "!*.ai",
                                         "!node_modules/electron-builder/**",
                                         "!node_modules/electron-notarize/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm-install-fetch/**" ]
        },
        "linux": {
            "category":                  "AudioVideo",
            "target":                    [ { "target": "AppImage" } ],
            "executableName":            "Rundown",
            "icon":                      "app-ui-icon.png",
            "files": [                   "!*.ai",
                                         "!node_modules/electron-builder/**",
                                         "!node_modules/electron-notarize/**",
                                         "!node_modules/shelljs/**",
                                         "!node_modules/cross-env/**",
                                         "!node_modules/cross-zip/**",
                                         "!node_modules/electron/dist/**",
                                         "!node_modules/dmg-builder/**",
                                         "!node_modules/app-builder-bin/**",
                                         "!node_modules/app-builder-lib/**",
                                         "!node_modules/7zip-bin/**",
                                         "!node_modules/npm-install-fetch/**" ]
        },
        "portable": {
            "useZip":                    true,
            "artifactName":              "Rundown.exe"
        }
    }
}
